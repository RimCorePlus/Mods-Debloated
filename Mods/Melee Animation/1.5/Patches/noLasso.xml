<Patch>
    <Operation Class="VFECore.PatchOperationToggableSequence">
        <enabled>true</enabled>
        <label>[Melee Animation] remove lassos</label>
        <operations>
            <li Class="PatchOperationRemove">
                <xpath>//ThingDef[@ParentName="AM_LassoBaseMakeable"]</xpath>
            </li>
            <li Class="PatchOperationRemove">
                <xpath>//PawnTableDef[defName="Assign"]/columns/li[text()="AM_LassoModePawnColumn"]</xpath>
            </li>
        </operations>
    </Operation>
</Patch>