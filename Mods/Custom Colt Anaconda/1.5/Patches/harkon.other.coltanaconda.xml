		<id>RCP_RecycleCCAnacondaTags</id>
		<category>RCP_RecycleCustomColtAnaconda</category>
		<operations>
			<li Class="PatchOperationRemove">
				<xpath>//ThingDef[defName="HRK_Colt_Anaconda_L"]/weaponTags/li[text()="Revolver"]</xpath>
			</li>
		</operations>
	</Operation>
</Patch>