<Patch>
    <Operation MayRequire="dubwise.dubsskylights" Class="ModSettingsFramework.PatchOperationModOption">
        <defaultValue>true</defaultValue>
        <label>Use ReBuild glass for Dubs Skylights</label>
        <id>RCP_RecycleReBuildDoorsAndCornersSkylights</id>
        <category>RCP_RecycleReBuildDoorsAndCorners</category>
        <operations>
            <li Class="PatchOperationSetName">
                <success>Always</success> <!--supress false red error-->
                <xpath>//ThingDef[costList/GlassPane]/costList/GlassPane</xpath>
                <name>RB_Glass</name>
            </li>
        </operations>
    </Operation>
</Patch>