<Patch>
    <Operation Class="VFECore.PatchOperationToggableSequence">
        <enabled>True</enabled>
        <label>[Vanilla Hair Expanded] remove barber's table</label>
        <operations>
            <li Class="PatchOperationRemove">
                <xpath>//ThingDef[defName="VHE_TableBarber"]</xpath>
            </li>
        </operations>
    </Operation>
    <Operation Class="VFECore.PatchOperationToggableSequence">
        <enabled>True</enabled>
        <label>[Vanilla Hair Expanded] replace styling station texture with barber's table</label>
        <operations>
            <li Class="PatchOperationReplace">
                <xpath>//ThingDef[defName="StylingStation"]/graphicData</xpath>
                <value>
                    <graphicData>
                        <texPath>Things/Building/Misc/TableBarber</texPath>
                        <graphicClass>Graphic_Multi</graphicClass>
                        <shaderType>CutoutComplex</shaderType>
                        <drawSize>(3.5,1.5)</drawSize>
                        <shadowData>
                            <volume>(2.9, 0.3, 0.5)</volume>
                            <offset>(0, 0, 0)</offset>
                        </shadowData>
                        <damageData>
                            <cornerTL>Damage/Corner</cornerTL>
                            <cornerTR>Damage/Corner</cornerTR>
                            <cornerBL>Damage/Corner</cornerBL>
                            <cornerBR>Damage/Corner</cornerBR>
                        </damageData>
                    </graphicData>
                </value>
            </li>
        </operations>
    </Operation>
</Patch>