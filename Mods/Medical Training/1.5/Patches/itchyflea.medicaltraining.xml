<Patch>
    <Operation Class="ModSettingsFramework.PatchOperationModOption">
        <defaultValue>true</defaultValue>
        <label>Remove (tm) from table name</label>
        <id>RCP_RecycleMedicalTrainingName</id>
        <category>RCP_RecycleMedicalTraining</category>
        <operations>
            <li Class="PatchOperationReplace">
                <xpath>//ThingDef[defName="IF_MeditrainTable"]/label/text()</xpath>
                <value>meditrain table</value>
            </li>
        </operations>
    </Operation>
    <Operation Class="ModSettingsFramework.PatchOperationModOption">
        <defaultValue>true</defaultValue>
        <label>Remove wood from costlist</label>
        <id>RCP_RecycleMedicalTrainingCost</id>
        <category>RCP_RecycleMedicalTraining</category>
        <operations>
            <li Class="PatchOperationRemove">
                <xpath>//ThingDef[defName="IF_MeditrainTable"]/costList/WoodLog</xpath>
            </li>
        </operations>
    </Operation>
</Patch>